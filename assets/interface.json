{
    "name": "MAD_Yuki",
    "url": "https://github.com/Yukino12333/MadAssistantDuet",
    "mirrorchyan_rid": "MadAssistantDuet_Yuki",
    "mirrorchyan_multiplatform": true,
    "mfa_max_version": "v1.0.1",
    "mfa_min_version": "v1.0.1",
    "controller": [
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "二重螺旋|Duet Night Abyss",
                "input": 4,
                "screencap": 16
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
    ],
    "agent": {
        "child_exec": "{PROJECT_DIR}/agent/MaaAgent.exe",
        "child_args": []
    },
    "task": [
        {
            "name": "10级火本探索",
            "entry": "set_target_wave",
            "doc": "进入指定副本后，即可启动，会先执行通用设置与通用开局",
            "advanced": [
                "目标波次设置",
                "选书选项设置"
            ],
            "pipeline_override": {
                "set_target_wave": {
                    "next": [
                        "set_book_option"
                    ]
                },
                "set_book_option": {
                    "next": [
                        "01_开始"
                    ]
                },
                "01_检查波次_顺": {
                    "recognition": {
                        "param": {
                            "expected": [
                                "^{target_wave_regex}$"
                            ]
                        }
                    }
                },
                "01_检查波次_逆": {
                    "recognition": {
                        "param": {
                            "expected": [
                                "^{target_wave_regex}$"
                            ]
                        }
                    }
                }
            }
        }
    ],
    "advanced": {
        "目标波次设置": {
            "field": [
                "目标波次"
            ],
            "type": [
                "int"
            ],
            "default": [
                "15"
            ],
            "pipeline_override": {
                "set_target_wave": {
                    "custom_action_param": {
                        "target_wave": "{目标波次}"
                    }
                },
                "01_检查波次_顺": {
                    "recognition": {
                        "param": {
                            "expected": [
                                "^{target_wave_regex}$"
                            ]
                        }
                    }
                },
                "01_检查波次_逆": {
                    "recognition": {
                        "param": {
                            "expected": [
                                "^{target_wave_regex}$"
                            ]
                        }
                    }
                }
            },
            "doc": "设置自动撤退的目标波次（1-15波）"
        },
        "选书选项设置": {
            "field": [
                "选书选项"
            ],
            "type": [
                "string"
            ],
            "default": [
                "不选择"
            ],
            "pipeline_override": {
                "set_book_option": {
                    "custom_action_param": {
                        "book_option": "{选书选项}"
                    }
                }
            },
            "doc": "设置选书选项：不选择、+100%、+200%、+800%、+2000%"
        }
    }
}